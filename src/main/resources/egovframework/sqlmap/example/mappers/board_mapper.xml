<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.example.sample.service.impl.BoardMapper">

<!-- 전체조회 -->
	<select id="listBoard" resultType="BoardVO">
	
		SELECT *
		FROM BOARD
		LIMIT 5 OFFSET #{start}
		
	</select>
	
<!--게시글 갯수 -->
<select id="getCount" resultType="int">
		SELECT COUNT(*)
		FROM BOARD
</select>		

<!-- 단건조회 -->
	<select id="selectBoard" parameterType="BoardVO"
							 resultType="BoardVO">

			SELECT * 
			FROM BOARD
			WHERE B_NO=#{b_no}
			
	</select>

<!-- 등록 -->
	<insert id="insertBoard" parameterType="BoardVO">

			INSERT INTO BOARD
				(  B_TITLE
				  , B_WRITER
				  , B_CONTENT
				  , B_DATE
				 )
			VALUES ( #{b_title}
				  , #{b_writer}
				  , #{b_content}
				  , NOW()
				  )

	</insert>

<!-- 수정 -->
	<update id="updateBoard" parameterType="BoardVO">

			UPDATE BOARD
			SET  B_TITLE=#{b_title}
				, B_WRITER=#{b_writer}
				, B_CONTENT=#{b_content}
				, B_DATE = NOW()
			 WHERE B_NO=#{b_no}

	</update>

<!-- 삭제  -->
	<delete id="deleteBoard" parameterType="BoardVO">

			DELETE FROM BOARD
			WHERE B_NO=#{b_no}

	</delete>

<!-- 로그기록 -->
	<select id="logList" resultType="BoardVO">
	
		SELECT *
		FROM BOARDBACKUP
		ORDER BY LOGNUM
		LIMIT 5 OFFSET #{start}
	</select>

<!--로그 갯수 -->
<select id="getCountLog" resultType="int">
		SELECT COUNT(*)
		FROM BOARDBACKUP
</select>	

</mapper>